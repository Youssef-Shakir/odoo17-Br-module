<odoo>
  <record id="view_complaint_form" model="ir.ui.view">
    <field name="name">coffee.complaint.form</field>
    <field name="model">coffee.complaint</field>
    <field name="arch" type="xml">
      <form string="Complaint">
        <sheet>
          <group>
            <field name="machine_id"/>
            <field name="user_id"/>
            <field name="message"/>
            <field name="status"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_complaint_tree" model="ir.ui.view">
    <field name="name">coffee.complaint.tree</field>
    <field name="model">coffee.complaint</field>
    <field name="arch" type="xml">
      <tree string="Complaints">
        <field name="machine_id"/>
        <field name="user_id"/>
        <field name="status"/>
      </tree>
    </field>
  </record>
</odoo>