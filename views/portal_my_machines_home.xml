<odoo>
    <template id="portal_my_machines_home" inherit_id="portal.portal_my_home" name="Portal: My Machines">
        <xpath expr="//t[@t-call='portal.portal_layout']/div/div" position="inside">
            <div class="row mt-4">
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <i class="fa fa-cogs fa-2x mb-2 text-primary"></i>
                            <h5 class="card-title">My Coffee Machines</h5>
                            <p class="card-text">Access and manage your coffee machines.</p>
                            <a href="/my/machines" class="btn btn-sm btn-outline-primary">View Machines</a>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
