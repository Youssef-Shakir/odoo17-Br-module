<odoo>
    <template id="portal_my_machines_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[contains(@class, 'o_portal_boxes_container')]" position="inside">
            <div class="col-12 col-sm-6 col-lg-4 mb-3">
                <a href="/my/machines" class="o_portal_box d-block h-100">
                    <div class="o_portal_box_icon text-center">
                        <i class="fa fa-cogs fa-3x text-primary"></i>
                    </div>
                    <div class="o_portal_box_content text-center">
                        <h3 class="mb-2">Your Machines</h3>
                        <p class="text-muted">View and manage your coffee machines</p>
                    </div>
                </a>
            </div>
        </xpath>
    </template>
</odoo>
